@model Entities.Concrete.Tour
 
<div class="container">
    <div class="main-body">
       
        
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="mt-3">
                                <h1>@Html.DisplayFor(model => model.Name)</h1>
                                <h4>Tur Detayı</h4>
 
                            </div>
                        </div>
                        <hr class="my-4">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Adı</h6>
                                <span class="text-secondary"> @Html.DisplayFor(model => model.Name)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Tur Tarihi</h6>
                                <span class="text-secondary"> @Model.TourDate.ToString("dd/MM/yyyy")</span>
                            </li> 
                           <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Tur Rehberi</h6>
                                <span class="text-secondary"> @Model.Guide.Name @Model.Guide.Surname</span>
                            </li> 
                                                
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Tura Dahil Olan Yerler</h6>
                                <span class="text-secondary">
                                    @String.Join(",", Model.Places.Select(x=>x.Name).ToArray())
                               </span> 
                            </li>
                             <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Aktif Mi?</h6>
                                <span class="text-secondary">
                                     @(Model.IsActive?"Evet":"Hayır")
                               </span> 
                            </li>
                        </ul>
                    </div>
                </div>
          

        
    </div>
</div>

