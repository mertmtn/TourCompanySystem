@model TourCompany.Web.Models.ViewModels.UserOperationClaimCreateOrUpdateViewModel

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <form>
                    <input type="hidden" asp-for="UserId" />  
                    <select asp-for="SelectedClaims" class="selectpicker" multiple data-live-search="true">
                        @if (Model != null && Model.Claims.Count > 0)
                        {
                            foreach (var claim in Model.Claims)
                            {
                                <option value="@claim.Id" selected=@(Model.SelectedClaims.Contains(claim.Id.ToString()))>@claim.Name</option>
                            }
                        }
                    </select>
                    <div class="form-group">
                        <input type="button" value="Güncelle" onclick="updateClaimForUser()" class="btn btn-primary" />
                    </div>
                </form>
                <div class="row">
                    <div class="col-md-4">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ajaxComplete(function () {
        $('.selectpicker').selectpicker();
    });
</script> 
