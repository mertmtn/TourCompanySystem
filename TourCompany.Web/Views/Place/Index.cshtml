@model IEnumerable<Entities.Concrete.Place>

@{
    ViewData["Title"] = "Bölge Listesi | Tour Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bölge Listesi</h1>

<p>
    <a role="button" class="btn btn-primary" asp-action="Create">Yeni Bölge Tanım</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Bölge Adı
            </th>
            <th>
                Bölge Ücreti
            </th>
            <th>
                Aktiflik Durumu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) (₺)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a role="button" class="btn btn-warning"  asp-action="Edit" asp-route-id="@item.PlaceId">Düzenle</a> 
                <a role="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.PlaceId">Detay</a> 
                <a role="button" class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.PlaceId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
