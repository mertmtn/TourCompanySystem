@model Entities.Concrete.Guide 
 
<div class="container">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="mt-3">
                                <h4> @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Surname)</h4>
                                
                            </div>
                        </div>
                        <hr class="my-4">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Adı</h6>
                                <span class="text-secondary"> @Html.DisplayFor(model => model.Name)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Soyadı</h6>
                                <span class="text-secondary"> @Html.DisplayFor(model => model.Surname)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Telefon</h6>
                                <span class="text-secondary"> @Html.DisplayFor(model => model.PhoneNumber)</span>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Cinsiyet</h6>
                                <span class="text-secondary">@(Model.Gender=='E'?"Erkek":"Kadın")</span>
                            </li>                            
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Bilinen Diller</h6>
                                <span class="text-secondary">
                                    @String.Join(",", Model.Languages.Select(x=>x.Name).ToArray())
                               </span> 
                            </li>
                             <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Aktif Mi?</h6>
                                <span class="text-secondary">
                                     @(Model.IsActive?"Evet":"Hayır")
                               </span> 
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
