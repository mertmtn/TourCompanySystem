@model TourCompany.Web.Models.ViewModels.TouristCreateOrEditViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4>Turist Tanım</h4>
    <div>
        <a asp-action="Index" class="btn btn-primary px-4">Turist listesine git</a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Soyadı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input asp-for="Surname" class="form-control" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">

                            <div class="col-sm-3">
                                <h6 class="mb-0">Cinsiyet</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <select asp-for="Gender" class="selectpicker">
                                    <option value="K">Kadın</option>
                                    <option value="E">Erkek</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="row mb-3">

                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefon Numarası</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input asp-for="BirthDate" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Ülke</h6>
                            </div><div class="col-sm-9 text-secondary">
                                <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                                 <span asp-validation-for="CountryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Uyruk</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <select asp-for="NationalityId" class="form-control" asp-items="ViewBag.NationalityId"></select>
                                 <span asp-validation-for="NationalityId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-9 text-secondary">
                                <input type="submit" value="Kaydet" class="btn btn-primary px-4" />
                            </div>
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-md-4">
                        </div>
                    </div>



                </div>
            </div>

        </div>
    </div>

</div>




<script>
     $(document).ready(function() {
      $('.my-select').selectpicker();
    });
</script>