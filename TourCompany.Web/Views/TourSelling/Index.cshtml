@model TourCompany.Web.Models.ViewModels.TourSellingCreateOrEditViewModel



<div class="container">

    <h2>Tur Satışı</h2>
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="mt-3">
                                <h4>Tur satışı yapılacak turist bilgileri</h4>

                            </div>
                        </div>
                        <hr class="my-4">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Adı</h6>
                                <span class="text-secondary"> @Html.DisplayFor(model => model.TouristName)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Soyadı</h6>
                                <span class="text-secondary"> @Html.DisplayFor(model => model.TouristSurname)</span>
                            </li>

                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Index">

                            <input type="hidden" asp-for="TouristId" />
                            <div class="form-group">
                                <select asp-for="SelectedTours" class="selectpicker col-sm-12" multiple data-actions-box="true" data-live-search="true" data-max-options="3">
                                    @if (Model != null && Model.Tours.Count > 0)
                                    {
                                        foreach (var tour in Model.Tours)
                                        {
                                            <option value="@tour.TourId">@tour.Name - @tour.TourDate.ToShortDateString()</option>
                                        }
                                    }
                                </select>

                            </div>

                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>

                        <div class="row">
                            <div class="col-md-4">
                            </div>
                        </div>



                    </div>
                </div>


            </div>
        </div>
    </div>

     </div>


<script>
    $(document).ajaxComplete(function () {
        $('.selectpicker').selectpicker();
    });
</script>
