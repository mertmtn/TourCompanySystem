@model IEnumerable<Entities.Concrete.Nationality>

@{
    ViewData["Title"] = "Uyruk Listesi | Tour Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Uyruk Listesi</h1>
<p>
    <a role="button" class="btn btn-primary" asp-action="Create">Yeni Uyruk Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Uyruk Adı
            </th>
            <th>
                Aktiflik Durumu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <button role="button" class="btn-warning" onclick="location.href='@Url.Action("Edit", "Nationality",new { Id = item.NationalityId } )'">Düzenle</button>
                    <button class="btn-info" onclick="openDetailModal(@item.NationalityId)">Detay</button>
                    <button class="btn-danger" onclick="openDeleteModal(@item.NationalityId)">Sil</button>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>


@section Scripts{
<script src="~/js/pages/nationalityModul.js" asp-append-version="true"></script>
}