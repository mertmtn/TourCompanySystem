@model TourCompany.Web.Models.ViewModels.NationalityCreateOrEditViewModel

<div class="container">

    <div class="row">
        <div class="card">
            <div class="card-body">
                <form>
                    <input type="hidden" asp-for="NationalityId" />
                    <div class="row mb-3">

                        <div class="col-sm-3">
                            <h6 class="mb-0">Uyruk Adı</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Aktif Mi?</h6>
                        </div><div class="col-sm-9 text-secondary">
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsActive" />
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-9 text-secondary">
                            <input type="button" value="Güncelle" onclick="submitForEdit()" class="btn btn-primary px-4" />
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="col-md-4">
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>

