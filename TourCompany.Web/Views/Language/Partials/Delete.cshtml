@model Entities.Concrete.Language

<div class="container">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="mt-3">
                                <h5>Kaydı silmek istediğinizden emin misiniz?</h5>
                            </div>
                        </div>
                        <hr class="my-4">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"> Yabancı Dil Adı</h6>
                                <span class="text-secondary">@Model.Name</span>
                            </li>
                        </ul>
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="mt-3">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="LanguageId" />
                                    <input type="submit" value="Sil" class="btn btn-danger" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>