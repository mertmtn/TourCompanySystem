@model IEnumerable<Core.Entities.Concrete.User>

@{
    ViewData["Title"] = "Kullanıcılar | Tour Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullanıcılar</h1>

<p>
    <button type="button" class="btn btn-primary" onclick="openModal('/User/Create','Yeni Kullanıcı Tanımı')">Yeni Kullanıcı Tanımı</button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Ad Soyad
            </th>
            <th>
                E-Posta
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMail)
                </td>
                <td>
                    <button type="button" class="btn btn-warning" onclick="openModal('/User/Edit/@item.Id','Kullanıcı Güncelle')">Düzenle</button>
                    <button type="button" class="btn btn-info" onclick="openModal('/User/Detail/@item.Id','Kullanıcı Detayı')">Detay</button>
                    <button type="button" class="btn btn-info" onclick="openModal('/User/GetUserClaimsByUserId/@item.Id','Kullanıcı Rolleri')">Rolleri</button>
                    <button type="button" class="btn btn-info" onclick="openModal('/User/UpdateClaim/@item.Id','Rol Tanımla')">Rol Tanımla</button>
                </td>                
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_CommonModalPartial")

@section Scripts{
    <script src="~/js/pages/commonModul.js" asp-append-version="true"></script>
    <script src="~/js/pages/userOperationsModul.js" asp-append-version="true"></script>
}