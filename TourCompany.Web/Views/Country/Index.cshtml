@model IEnumerable<Entities.Concrete.Country>

@{
    ViewData["Title"] = "Ülke Listesi | Tour Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ülke Listesi</h1>

<p>
    <button type="button" class="btn btn-primary" onclick="openModal(,'')">Yeni Ülke Ekle</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ülke Adı
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <button role="button" class="btn-warning" onclick="openModal(@item.CountryId,'')">Düzenle</button>
                    <button class="btn-danger" onclick="openModal(@item.CountryId,'')">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>


@Html.PartialAsync("_CommonModalPartial")

@section Scripts{
    <script src="~/js/pages/commonModul.js" asp-append-version="true"></script>
    <script src="~/js/pages/countryModul.js" asp-append-version="true"></script>
}